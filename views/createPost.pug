doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Create Post | EXpresser
    link(rel="stylesheet", href="/css/createPost.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Lato:300,300i,700")
    link(rel="shortcut icon", href="/img/favicon.png", type="image/png")
  body
    // NAVBAR
    header.header
      nav.navbar
        .nav-left
          a.logo(href="/")
            img.favicon(src="/img/favicon.png", alt="Logo")
            span EXpresser
        .nav-right
          ul.nav-links
            if user
              li.nav-user
                a.nav__el(href='/me')
                  img.nav__user-img(src=`/img/${user.photo}`, alt=`Photo of ${user.name}`)
                  span= user.name.split(' ')[0]
                button.nav__el.nav__el--logout Logout
                a.nav__el.nav__el--post(href='/create-post') Create Post
            else
              li: a.nav__el(href="/login") Login
              li: a.nav__el.nav__el--cta(href="/signup") Sign Up

    main.blog-container
      h1 Create a New Blog Post
      form.form
        .form-group
          label(for="title") Title
          input#title.form-control(type="text", name="title", required)

        .form-group
          label(for="excerpt") Excerpt
          textarea#excerpt.form-control(name="excerpt", rows="2")

        .form-group
          label(for="content") Content
          textarea#content.form-control(name="content", rows="10", required)

        .form-group
          label(for="tags") Tags (comma separated)
          input#tags.form-control(type="text", name="tags")

        .form-group         
          label(for="imageCover") Cover Image URL
          input#imageCover.form-control(type="text", name="imageCover")

        button.btn.btn--primary(type="submit") Publish Post

    script(src='/js/bundle.js')
    footer.footer
      .footer-container
        .footer-left
          a.logo(href="/")
            img.favicon(src="/img/favicon.png", alt="Logo")
            span EXpresser
        .footer-right
          ul.footer-links
            li: a(href="/about") About
            li: a(href="/contact") Contact
            li: a(href="/privacy") Privacy
        .footer-bottom
          p Â© #{new Date().getFullYear()} EXpresser. All rights reserved.
